<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up Page</title>
    <link rel="stylesheet" href="/signup.css">
</head>
<body>
    <div class="signup-container">
        <h2>Sign Up</h2>
        <form class="signup-form" action="/signin" method="post">

            <input type="text" name="fullname" name="fullname" placeholder="Full Name" required>
            <input type="email" name="email" name="email" placeholder="Email Address" required>
            <input type="password" name="password" name="password" id="password" placeholder="Password" required>
            <!-- <input type="button" value="Sign Up" onclick="submitForm()"> -->
            <button type="submit">Sign Up</button>
        </form>
        <a href="signin" class="login-link">Already have an account? <br>Log in</a>
    </div>

    <script>
        function submitForm() {
            var formData = new FormData(document.getElementById("signup-form"));
            fetch("/signup", {
                method: "post",
                body: formData
            })
            .then(response => {
                if (response.ok) {
                    alert("Signup successful!");
                    
                } else {
                    alert("Signup failed. Please try again.");
                }
            })
            .catch(error => console.error("Error:", error));
        }
    </script>
</body>
</html>